{
    "references": [],
    "compilerOptions": {
        "rootDir": ".",
        "baseUrl": ".",
        "composite": false,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noEmit": true
    },
    "include": [
        "library/src/**/*",
        "packages/type/src/**/*",
        "packages/core/src/**/*",
        "packages/trait/src/**/*",
        "packages/util/src/**/*"
    ],
    "exclude": [
        "**/node_modules/**",
        "**/dist/**",
        "**/build/**",
        "**/test/**",
        "**/tests/**",
        "**/docs/**",
        "**/website/**",
        "**/sandbox/**"
    ]
}
