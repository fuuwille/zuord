{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "rootDir": ".",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@": ["src/index.ts"],
      "@/*": ["src/*"],
      "zuord": ["../api/src/index.ts"],
      "@zuord/type": ["../type/src/index.ts"],
    }
  }
}