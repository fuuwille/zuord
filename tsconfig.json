{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "rootDir": ".",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "zuord": ["../lib/src/index.ts"],
      "zuord/internal": ["../lib/src/internal/index.ts"],
      "@zuord/type": ["../packages/type/src/index.ts"],
      "@zuord/core": ["../packages/core/src/index.ts"],
      "@zuord/util": ["../packages/util/src/index.ts"],
      "@zuord/trait": ["../packages/trait/src/index.ts"],
    }
  }
}