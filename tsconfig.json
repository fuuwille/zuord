{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "outDir": "dist",
        "rootDir": ".",
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": true,
        "types": ["vitest/globals"],
        "baseUrl": ".",
        "paths": {
            "@": ["src/index.ts"],
            "@/*": ["src/*"]
        }
    },
    "include": ["src", "src/globals.d.ts", "tests"],
}