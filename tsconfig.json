{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "rootDir": ".",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "zuord": ["../core/src/index.ts"],
      "zuord/type": ["../core/src/type/index.ts"],
      "@zuord/util": ["../util/src/index.ts"],
      "@zuord/test": ["../test/src/index.ts"]
    }
  }
}