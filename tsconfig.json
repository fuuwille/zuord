{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "rootDir": ".",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "zuord": ["../library/src"],
      "zuord/extended": ["../library/src/extended"],
      "zuord/internal": ["../library/src/internal"],
      "@zuord/type": ["../packages/type/src"],
      "@zuord/core": ["../packages/core/src"],
      "@zuord/core/internal": ["../packages/core/src/internal"],
      "@zuord/util": ["../packages/util/src"],
      "@zuord/trait": ["../packages/trait/src"],
    },
  }
}